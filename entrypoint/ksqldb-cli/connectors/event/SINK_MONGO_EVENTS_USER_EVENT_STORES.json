{
  "name": "SINK_MONGO_EVENTS_USER_EVENT_STORES",
  "config": {
    "connector.class": "com.mongodb.kafka.connect.MongoSinkConnector",
    "tasks.max": "1",

    "topics": "sink-mongo-events-user_event_stores",

    "connection.uri": "mongodb://mongo:1234@mongo-local:27017",
    "database": "event",
    "collection": "user_event_stores",

    "document.id.strategy": "com.mongodb.kafka.connect.sink.processor.id.strategy.ProvidedInValueStrategy",
    "document.id.strategy.overwrite.existing": "true",
    "writemodel.strategy": "com.mongodb.kafka.connect.sink.writemodel.strategy.ReplaceOneDefaultStrategy",

    "max.num.retries": "5",
    "retries.defer.timeout": "5000",

    "errors.tolerance": "all",
    "errors.log.enable": "true",
    "errors.log.include.messages": "true",
    "errors.deadletterqueue.topic.name": "dlq-sink-mongo-events-user_event_stores",
    "errors.deadletterqueue.topic.replication.factor": "1",
    "errors.deadletterqueue.context.headers.enable": "true",

    "key.converter": "org.apache.kafka.connect.storage.StringConverter",
    "value.converter": "io.confluent.connect.protobuf.ProtobufConverter",
    "value.converter.schema.registry.url": "http://schema-registry-local:8081",
    "key.converter.schemas.enable": "true",
    "value.converter.schemas.enable": "true",

    "transforms": "convertUpdatedAt,convertCreatedAt",

    "transforms.convertCreatedAt.type": "org.apache.kafka.connect.transforms.TimestampConverter$Value",
    "transforms.convertCreatedAt.field": "created_at",
    "transforms.convertCreatedAt.target.type": "Timestamp",
    "transforms.convertCreatedAt.format": "yyyy-MM-dd'T'HH:mm:ss.SSSSSSXXX",
    "transforms.convertUpdatedAt.missing.or.null.behavior": "skip",

    "transforms.convertUpdatedAt.type": "org.apache.kafka.connect.transforms.TimestampConverter$Value",
    "transforms.convertUpdatedAt.field": "updated_at",
    "transforms.convertUpdatedAt.target.type": "Timestamp",
    "transforms.convertUpdatedAt.format": "yyyy-MM-dd'T'HH:mm:ss.SSSSSSXXX",
    "transforms.convertCreatedAt.missing.or.null.behavior": "skip"
  }
}
