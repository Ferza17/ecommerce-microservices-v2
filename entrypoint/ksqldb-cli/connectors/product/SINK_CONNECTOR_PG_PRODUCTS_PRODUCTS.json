{
  "name": "SINK_CONNECTOR_PG_PRODUCTS_PRODUCTS",
  "config": {
    "connector.class": "io.confluent.connect.jdbc.JdbcSinkConnector",
    "tasks.max": "2",

    "topics": "sink-pg-products-products",
    "connection.url": "jdbc:postgresql://postgres-local:5432/products",
    "connection.user": "postgres",
    "connection.password": "1234",
    "table.name.format": "products",

    "key.converter": "org.apache.kafka.connect.storage.StringConverter",
    "value.converter": "io.confluent.connect.json.JsonSchemaConverter",
    "value.converter.schema.registry.url": "http://schema-registry-local:8081",

    "auto.create": true,
    "auto.evolve": true,
    "delete.enabled": true,

    "insert.mode": "upsert",
    "pk.mode": "record_key",
    "pk.fields": "id",
    "errors.tolerance": "all",
    "errors.log.enable": "true",
    "errors.log.include.messages": "true",
    "db.timezone": "Asia/Jakarta",

    "transforms": "convertUpdatedAt,convertCreatedAt",

    "transforms.convertUpdatedAt.type": "org.apache.kafka.connect.transforms.TimestampConverter$Value",
    "transforms.convertUpdatedAt.field": "updated_at",
    "transforms.convertUpdatedAt.target.type": "Timestamp",
    "transforms.convertUpdatedAt.format": "yyyy-MM-dd'T'HH:mm:ss.SSSSSSXXX",
    "transforms.convertCreatedAt.missing.or.null.behavior": "skip",

    "transforms.convertCreatedAt.type": "org.apache.kafka.connect.transforms.TimestampConverter$Value",
    "transforms.convertCreatedAt.field": "created_at",
    "transforms.convertCreatedAt.target.type": "Timestamp",
    "transforms.convertCreatedAt.format": "yyyy-MM-dd'T'HH:mm:ss.SSSSSSXXX",
    "transforms.convertUpdatedAt.missing.or.null.behavior": "skip"



  }
}