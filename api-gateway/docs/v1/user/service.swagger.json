{
  "swagger": "2.0",
  "info": {
    "title": "USER SERVICE API",
    "description": "API for PRODUCT, authentication, and authorization",
    "version": "1.0.0"
  },
  "tags": [
    {
      "name": "UserService"
    },
    {
      "name": "AuthService"
    }
  ],
  "schemes": [
    "https"
  ],
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "paths": {
    "/v1/user/auth/{otp}": {
      "put": {
        "summary": "verify user otp with provided otp",
        "operationId": "AuthService_UserVerifyOtp",
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
              "$ref": "#/definitions/userAuthVerifyOtpResponse"
            }
          },
          "default": {
            "description": "An unexpected error response.",
            "schema": {
              "$ref": "#/definitions/rpcStatus"
            }
          }
        },
        "parameters": [
          {
            "name": "otp",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/AuthServiceUserVerifyOtpBody"
            }
          }
        ],
        "tags": [
          "AuthService"
        ]
      }
    },
    "/v1/user/auth/{token}": {
      "get": {
        "summary": "get user otp with provided token",
        "operationId": "AuthService_FindUserByToken",
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
              "$ref": "#/definitions/userUser"
            }
          },
          "default": {
            "description": "An unexpected error response.",
            "schema": {
              "$ref": "#/definitions/rpcStatus"
            }
          }
        },
        "parameters": [
          {
            "name": "token",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "tags": [
          "AuthService"
        ]
      },
      "put": {
        "summary": "logout user by token",
        "description": "not commonly used for HTTP, its used only on RPC request. this endpoint will blocked by http middleware",
        "operationId": "AuthService_UserLogoutByToken",
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
              "$ref": "#/definitions/userAuthLogoutByTokenResponse"
            }
          },
          "default": {
            "description": "An unexpected error response.",
            "schema": {
              "$ref": "#/definitions/rpcStatus"
            }
          }
        },
        "parameters": [
          {
            "name": "token",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/AuthServiceUserLogoutByTokenBody"
            }
          }
        ],
        "tags": [
          "AuthService"
        ],
        "security": [
          {
            "bearer": []
          }
        ]
      }
    },
    "/v1/user/users": {
      "post": {
        "summary": "create a new user",
        "description": "it can be used from rabbitMQ Queue with EXCHANGE user.exchange, QUEUE user.created. this endpoint will be block with middleware and interceptor",
        "operationId": "UserService_CreateUser",
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
              "type": "object",
              "properties": {}
            }
          },
          "default": {
            "description": "An unexpected error response.",
            "schema": {
              "$ref": "#/definitions/rpcStatus"
            }
          }
        },
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/userCreateUserRequest"
            }
          }
        ],
        "tags": [
          "UserService"
        ],
        "security": [
          {
            "bearer": []
          }
        ]
      }
    },
    "/v1/user/users/{email}/{password}": {
      "get": {
        "summary": "find user by provided email and password",
        "description": "its not commonly used for http, its only used for rpc request. this endpoint will blocked by http middleware",
        "operationId": "UserService_FindUserByEmailAndPassword",
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
              "$ref": "#/definitions/userUser"
            }
          },
          "default": {
            "description": "An unexpected error response.",
            "schema": {
              "$ref": "#/definitions/rpcStatus"
            }
          }
        },
        "parameters": [
          {
            "name": "email",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "password",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "tags": [
          "UserService"
        ],
        "security": [
          {
            "bearer": []
          }
        ]
      }
    },
    "/v1/user/users/{id}": {
      "get": {
        "summary": "get user with provided id",
        "operationId": "UserService_FindUserById",
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
              "$ref": "#/definitions/userUser"
            }
          },
          "default": {
            "description": "An unexpected error response.",
            "schema": {
              "$ref": "#/definitions/rpcStatus"
            }
          }
        },
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "tags": [
          "UserService"
        ],
        "security": [
          {
            "bearer": []
          }
        ]
      }
    }
  },
